<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270.1dp"
    android:layout_height="90dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="270.1dp"
    android:background="@color/colorFUndo"
    android:elevation="5dp"
    card_view:cardBackgroundColor="@color/colorFUndo"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="10dp"
    card_view:contentPadding="5dp">

    <FrameLayout
        android:layout_width="297dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorFundoLista"
        android:elevation="11dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:layout_gravity="top|bottom|center_vertical|start|end"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18.8dp"
            android:layout_marginEnd="225dp"
            android:layout_marginBottom="67.2dp"
            android:fontFamily="@font/helveticaneulight"
            android:textColor="@color/corTituloPagamento"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/helveticaneulight"
            android:textColor="@color/corDescricao"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="117dp"
            android:layout_height="18dp"
            android:layout_marginStart="145.5dp"
            android:layout_marginTop="18.8dp"
            android:layout_marginEnd="36.5dp"
            android:layout_marginBottom="65.8dp"
            android:fontFamily="@font/helveticaneulight"
            android:textColor="@color/corTituloPagamento"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/valor"
            android:layout_width="154dp"
            android:layout_height="23dp"
            android:layout_marginStart="121.5dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="29dp"
            android:fontFamily="@font/helveticaneulight"
            android:textColor="@color/corValor"
            android:textSize="20sp" />

    </FrameLayout>
</android.support.v7.widget.CardView>
